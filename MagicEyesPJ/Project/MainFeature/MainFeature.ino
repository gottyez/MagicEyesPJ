void setup() {
    pinMode(ledPin, OUTPUT);     //Motion Detector
    pinMode(digitalPin, INPUT);

    pinMode(trigPin, OUTPUT);    //Ultrasonic
    pinMode(echoPin, INPUT);

  pinMode(buzzer, OUTPUT);      //Buzzer

  display.begin(0x3C);          //OLED

